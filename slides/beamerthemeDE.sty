\mode<presentation>

% Package requirement
\RequirePackage{tikz}
\RequirePackage[most]{tcolorbox}

\usepackage[absolute,overlay]{textpos}
% Settings
\useinnertheme{DE}
\useoutertheme{DE}
\usecolortheme{DE}

% Remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% Items
\setbeamertemplate{items}[square]
\setbeamertemplate{sections/subsections in toc}[square]

% Personalized squared blocks set-up
\setbeamertemplate{blocks}[rounded=false]
%personalized block
\newtcolorbox{myblock}[1][]{
  beamer,
  colframe=white,
  width=\textwidth+7pt,
  enlarge left by=-3pt,
  bottom=0pt,
  top=-2pt,
  left=0pt,
  right=0pt,
  toptitle=-1pt,
  bottomtitle=-1pt,
  sharp corners,
  fonttitle=\normalfont,
  adjusted title=#1,
  interior titled code={
    \shade[left color=DEblue,right color=DEgreen] 
      (title.south west) --
      (title.south east) -- 
      (title.north east) -- 
      (title.north west) --
      (title.south west); 
  }
}

\setbeamerfont{footnote}{size=\scriptsize}
%\addtobeamertemplate{footnote}{}{\vspace{.4cm}}
\addtobeamertemplate{footnote}{\vspace{-9pt}\advance\hsize-0.5cm}{\vspace{9pt}}
\renewcommand*{\footnoterule}{\kern -4pt \hrule \@width 2in \kern 8.6pt}

\mode<all>
